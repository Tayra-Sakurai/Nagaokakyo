<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Nagaokakyo.BalanceSheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nagaokakyo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Kizu.Models"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{x:Bind tables.Tables}">
            <ListView.Header>
                <controls:DataTable>
                    <controls:DataColumn x:Uid="IdColumn"/>
                    <controls:DataColumn x:Uid="DateTimeColumn"/>
                    <controls:DataColumn x:Uid="ItemColumn" DesiredWidth="*"/>
                    <controls:DataColumn x:Uid="CashColumn"/>
                    <controls:DataColumn x:Uid="IcocaColumn"/>
                    <controls:DataColumn x:Uid="NanacoColumn"/>
                    <controls:DataColumn x:Uid="CoopColumn"/>
                </controls:DataTable>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Table">
                    <controls:DataRow>
                        <TextBlock Text="{x:Bind Id}"/>
                        <TextBlock Text="{x:Bind DateTime}"/>
                        <TextBlock Text="{x:Bind Item}"/>
                        <TextBlock Text="{x:Bind Cash}"/>
                        <TextBlock Text="{x:Bind Icoca}"/>
                        <TextBlock Text="{x:Bind Nanaco}"/>
                        <TextBlock Text="{x:Bind Coop}"/>
                    </controls:DataRow>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <CommandBar Grid.Row="1" DefaultLabelPosition="Right">
            <AppBarButton Icon="Add" x:Uid="AddBtn"
                          Command="{x:Bind tables.AddCommand}"/>
            <AppBarButton Icon="Sync" x:Uid="LoadBtn"
                          Command="{x:Bind tables.LoadCommand}"/>
            <AppBarButton x:Uid="DetailBtn" Icon="Edit"/>
        </CommandBar>
    </Grid>
</Page>
